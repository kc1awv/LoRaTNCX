{
  "station": {
    "callsign": "TEST2", 
    "node_name": "LoRa Test Node 2",
    "location": "Remote"
  },
  "radio": {
    "frequency": 433000000,
    "tx_power": 14,
    "bandwidth_index": 7,
    "spreading_factor": 8,
